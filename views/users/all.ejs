<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <% include ../../partials/navbar %>
    <h1>Welcome to <%= title %>, <%= currentUser.username %></h1>
    <% users.forEach(function(user){ %>
      <% if(user._id != currentUser._id){ %>
        <div class="user">
          <img src=<%= user.profilePic %> alt="">
          <h3><%=user.username%></h3>
        </div>
        <div class="follow-form">
          <form action="/users/follow" method="post" accept-charset="utf-8">
            <input type="hidden" value="<%= user._id %>" name="id"></input>
            <input type="hidden" value="<%= user.username %>" name="name"></input>
            <input type="hidden" value="<%= user.profilePic %>" name="profilePic"></input>
            <input type="hidden" value="<%= currentUser._id %>" name="userId"></input>
            <input type="submit" value="Follow">
          </form>
        </div>
      <% } %>
    <% }) %>
    <script   src="https://code.jquery.com/jquery-2.2.3.min.js"   integrity="sha256-a23g1Nt4dtEYOj7bR+vTu7+T8VP13humZFBJNIYoEJo="   crossorigin="anonymous"></script>
  </body>
</html>
